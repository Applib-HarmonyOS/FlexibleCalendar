<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <com.pv.flexiblecalendar.FlexibleCalendarView
        ohos:id="$+id:month_view"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$color:darker_gray"/>

    <Button
        ohos:id="$+id:button"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Awesomeness on click"
        ohos:text_alignment="center"
        ohos:left_margin="5vp"
        ohos:right_margin="5vp"
        ohos:text_size="20fp"
        ohos:top_padding="10vp"
        ohos:bottom_padding="10vp"
        ohos:text_color="$color:black"
        ohos:background_element="$graphic:cell_gray_background"/>


</DirectionalLayout>
